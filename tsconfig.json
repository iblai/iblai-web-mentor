{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist/types",
    "strict": true,
    "skipLibCheck": true,
    "types": ["./types.d.ts", "react"]
  },
  "include": ["src/**/*", "types.d.ts"]
}
